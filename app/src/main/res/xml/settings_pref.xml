<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <EditTextPreference
        android:dialogTitle="@string/add_new_currency"
        android:icon="@android:drawable/ic_input_add"
        android:inputType="number"
        android:summary="@string/add_currency_summary"
        app:key="addNewCurrencyKey"
        app:title="@string/add_new_currency">

    </EditTextPreference>
    <EditTextPreference
        android:dialogTitle="@string/update_commission_title"
        android:icon="@android:drawable/ic_menu_manage"
        android:inputType="numberDecimal"
        android:summary="@string/update_commission_summary"
        app:key="updateCommission"
        app:title="@string/update_commission">

    </EditTextPreference>

    <EditTextPreference
        android:dialogTitle="@string/update_sync_time"
        android:icon="@android:drawable/ic_popup_sync"
        android:inputType="numberDecimal"
        android:summary="@string/sync_time_summary"
        app:key="updateSyncTime"
        app:title="@string/update_time_title">

    </EditTextPreference>
    <EditTextPreference
        android:dialogTitle="Enter total number of free conversion"
        android:icon="@android:drawable/ic_menu_add"
        android:inputType="number"
        android:summary="if you enter 10, then first 10 conversion will be free of cost"
        app:key="updateTotalNumOfFreeConversion"
        app:title="Total number of free conversion">

    </EditTextPreference>

    <EditTextPreference
        android:dialogTitle="Enter max amount for free conversion"
        android:icon="@android:drawable/ic_menu_add"
        android:inputType="number"
        android:summary="if you enter 500, conversion up to 500 will be free of cost"
        app:key="updateMaxFreeAmount"
        app:title="Max amount for free conversion">

    </EditTextPreference>

    <EditTextPreference
        android:dialogTitle="Enter every nth conversion position"
        android:icon="@android:drawable/ic_menu_add"
        android:inputType="number"
        android:summary="Please enter position of conversion. Eg-  if you enter 10 then every 10th conversion will be free"
        app:key="updateConversionPosition"
        app:title="Enter every nth conversion position">

    </EditTextPreference>

</PreferenceScreen>
